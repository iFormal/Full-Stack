<div class="container">
	{{#if order}}
	<div class="card card-body">
		<h3 class="text-primary">Order History</h3>
		{{#each order}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-header">
				<h5 class="card-title">{{id}}</h5>
			</div>
			<div class="card-body">
                <table>
					<tr>
						<th>Name, Quantity</th>
					</tr>
					<tr>
						<th>{{replaceCommas cart}}</th>
					</tr>
					<tr>
						<th>Total Price: ${{totalprice}}</th>
					</tr>
				</table>
			</div>
		</div>
		{{/each}}
	</div>
	{{else}}
	<h3>No Orders</h3>
    <a href="/user/listStores2"> Start Ordering Now</a>
	{{/if}}
</div>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>