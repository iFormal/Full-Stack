<div class="heading">
	<h2>Store Selection</h2>
</div>
<div class="container">
	{{#if stores}}
	{{#each stores}}
		<a href="/user/listMenus2/{{id}}" data-title="{{name}}" data-toggle="lightbox">
			<img src="{{posterURL}}" alt="Poster" class="img-thumbnail img-fluid mb-2"
				onerror="this.src='/img/no-image.jpg'" style="max-height:160px">
		</a>
	</div>
	<div class="col-lg-8">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-3">
				<p class="font-weight-bold">{{name}}</p>
			</div>
		</div>
	{{/each}}
	{{else}}
	<h3>No Stores Available</h3>
	{{/if}}
</div>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>