<div class="heading">
    <h1>{{users.name}}'s Profile</h1>
    <a href="{{users.id}}/editProfile">Edit Profile</a>
</div>

<div class=".col-md-10" style="display: flex; flex-direction: row;">
    <div class="card card-body">
        <div class="col-xl-10">
            <div class="text-danger small mb-3" id="posterErr" style="display:none"></div>
            <img id="poster" src="{{users.profilePic}}" alt="Poster" class="border img-thumbnail img-fluid"
                onerror="this.src='/img/no-image.jpg'">
                <p></p>
            <p> Created on: {{formatDate users.createdAt 'DD/MM/YY'}}<p>
        </div>
    </div>
    <div class="card card-body col-xl-4">
        <h4 style="text-decoration:underline;">Order History</h4>
    </div>
</div>
<p></p>
<div class="card card-body">
    <h4 style="text-decoration: underline;">Reviews</h4>
</div>

<script>
    $('#datepicker').datepicker({
        format: 'dd/mm/yyyy',
        uiLibrary: 'bootstrap4',
        value: moment().format('DD/MM/YYYY'),
    });
</script>