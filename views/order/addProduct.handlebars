<h3>Add Order</h3>
{{#each products }}
<div class="container">
	<div class="card card-body ">
		<div class="col-md-6 col-md-8">
			<form action="" method="post">
				<input hidden="hidden" class="form-control mb-1" id="id" name="id" value="{{productid}}"
					onblur="initialiseTitle()" />
				<input hidden="hidden" class="form-control mb-1" id="name" name="name" value="{{name}}"
					onblur="initialiseTitle()" />{{name}}
				<div class="form-group">
					<input hidden="hidden" class="form-control mb-1" id="description" name="description"
						value="{{description}}" onblur="initialiseTitle()" />{{description}}
				</div>
				<div class="form-group">
					<input hidden="hidden" class="form-control mb-1" id="price" name="price" value="{{price}}"
						onblur="initialiseTitle()" />${{price}}
				</div>
				<div class="form-group">
					<input type="number" id="quantity" name="quantity" value="1" min="1" max="10"/>
				</div>
				<input id="btnSubmit" type="submit" value="Add to Cart" class="btn btn-primary">
			</form>
		</div>
	</div>
</div>
{{/each}}

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		uiLibrary: 'bootstrap4',
		value: moment().format('DD/MM/YYYY'),
	});
</script>