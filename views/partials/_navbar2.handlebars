{{#if user}}
{{#if user.status includeZero=false}}
<div class="sidebar">
    <div class="logo_content">
        <div class="logo">
            <i class='bx bxl-c-plus-plus'></i>
            <a href="/" class="logo_name">SouthCanteen - Admin</a>
        </div>
        <i class='bx bx-menu' id="btn"></i>
    </div>
    <ul class="nav_list">
        <li>
            <a href="/admin/listStores">
                <i class='bx bx-store'></i>
                <span class="links_name">Store Management</span>
            </a>
        </li>
        <li>
            <a href="/admin/listMenus">
                <i class='bx bx-food-menu'></i>
                <span class="links_name">Food Management</span>
            </a>
        </li>
        <li>
            <a href="/admin/listOrders">
                <i class='bx bx-cart'></i>
                <span class="links_name">Customer Order</span>
            </a>
        </li>
        <li>
            <a href="/admin/listAcc">
                <i class='bx bx-user'></i>
                <span class="links_name">Manage Account</span>
            </a>
        </li>
        <li>
            <a href="/promotion/listPromotions">
                <i class='bx bx-bowl-rice'></i>
                <span class="links_name">Manage Promotion</span>
            </a>
        </li>
        <li>
            <a href="/promotion/promotionalEmail">
                <i class='bx bx-envelope'></i>
                <span class="links_name">Promotional Email</span>
            </a>
        </li>
        <li>
            <a href="/user/logout">
                <i class='bx bx-log-out'></i>
                <span class="links_name">Log Out</span>
            </a>
        </li>
    </ul>
</div>
{{else}}
<div class="header">
    <div class="menu-bar">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="/"><img src="img/logo.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class='bx bx-menu'></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/listStores2">Stores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/promotion/userInterface">Promotions</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{user.name}}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a href="/user/profile/{{user.id}}" class="dropdown-item">Profile</a>
                            <a href="/user/receipt" class="dropdown-item">Order History</a>
                            <a href="/user/logout" class="dropdown-item">Logout</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/listProduct"><img src="/img/userCart.png"></a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>

