<div class="promotion">
	<div class="heading">
		<h1>Promotion Management</h1>
		<h3>Promotion</h3>
	</div>
		{{#if promotions}}
	<div class="card card-body">
		<h3 class="text-primary">Promotions</h3>
		{{#each promotions}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-header">
				<h5 class="card-title">{{name}}</h5>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-lg-2">
						<a href="{{posterURL}}" data-title="{{name}}" data-toggle="lightbox">
							<img src="{{posterURL}}" alt="Poster" class="img-thumbnail img-
fluid mb-2" onerror="this.src='/img/no-image.jpg'" style="max-
height:160px">
						</a>
					</div>
					<div class="col-lg-8">
						<div class="row">
							<div class="col-sm-12 col-md-12 col-lg-3">
								<p class="font-italic">Date Release</p>
								<p class="text-info">{{formatDate dateRelease 'DD MMM
									YYYY'}}
								</p>
							</div>
							<div class="col-sm-12 col-md-12 col-lg-3">
								<p class="font-italic">Store Id</p>
								<p class="text-info">{{storeid}}</p>
							</div>
						</div>
					</div>
					<div class="col-lg-2">
						<p>
							<a href="/promotion/editPromotion/{{id}}" class="card-link mb-2">
								<i class="fas fa-pencil-alt"></i>
								Edit
							</a>
						</p>
						<p>
							<a href="/promotion/deletePromotion/{{id}}" class="card-link" data-toggle="confirmation"
								data-title="Confirm delete?">
								<i class="far fa-trash-alt"></i>
								Delete
							</a>
						</p>
					</div>
				</div>
			</div>

			<div class="accordion" id="storyAccordion">
				<div class="card-header" id="headingOne">
					<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne{{id}}"
						aria-expanded="false" aria-controls="collapseOne{{id}}" style="text-decoration: none;">
						Description <i class="fas fa-chevron-down"></i>
					</button>
				</div>
				<div id="collapseOne{{id}}" class="collapse" aria-labelledby="headingOne" data-parent="#storyAccordion">
					<div class="card-body">
						{{description}}
						</button>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	{{else}}
	<h3>No Promotion</h3>
	{{/if}}
	<a href="/promotion/addPromotion" class="heading">Add Promotion</a>
</div>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>